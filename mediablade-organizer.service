[Unit]
Description=MediaBlade Media Organizer
After=docker.service network-online.target
Wants=docker.service

[Service]
Type=oneshot
WorkingDirectory=/srv/mediablade
ExecStart=/usr/bin/python3 /srv/mediablade/media_organizer.py . --discord-webhook="YOUR_DISCORD_WEBHOOK_URL_HERE"
User=1000
Group=1000
StandardOutput=append:/srv/mediablade/organizer.log
StandardError=append:/srv/mediablade/organizer.log
TimeoutStartSec=300

[Install]
WantedBy=multi-user.target

